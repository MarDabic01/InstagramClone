@page "{passedemail}"
@model InstagramCloneWebApp.Pages.ResetPasswordPageModel
@{
    ViewData["Title"] = "REACH ME - Reset Password Page";
    var passedmail = RouteData.Values["passedemail"];
}

<link rel="stylesheet" href="~/css/resetPageCSS.css" />
<div id="mainContainer">
    <div id="regContainer">
        <h1>Reset your password</h1>
        <h2>Enter new password</h2>
        <form method="post">
            <input type="password" placeholder="Password" name="password" /> <br />
            <input type="password" placeholder="Repeat password" name="repeatpassword" /><br />
            <input type="submit" value="RESET" />
        </form>
        @if (Model.data2.Length > 0)
        {
            <div>
                <strong>@Model.infoMessage</strong>
            </div>
        }
    </div>
</div>