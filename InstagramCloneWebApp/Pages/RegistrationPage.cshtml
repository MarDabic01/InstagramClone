@page
@model InstagramCloneWebApp.Pages.RegistrationPageModel
@{
    ViewData["Title"] = "REACH ME - Registration Page";
}

<link rel="stylesheet" href="~/css/registrationPageCSS.css" />
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">ReachMe</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/LoginPage">LogIn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/RegistrationPage">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div id="mainContainer">
    <div id="regContainer">
        <h1>Welcome to <span id="title">ReachMe!</span></h1>
        <h2>Please fill the registration form</h2>
        <form method="post">
            <input type="email" placeholder="E-mail" name="email" value="@Model.newUser.email" /> <br />
            <input type="text" placeholder="Username" name="username" value="@Model.newUser.username" /> <br />
            <input type="password" placeholder="Password" name="password" value="@Model.newUser.password" /> <br />
            <input type="password" placeholder="Repeat password" name="repeatpassword" value="@Model.newUser.repeatpassword" /> <br />
            <input type="submit" value="REGISTER" />
        </form><br />
        <a id="mybutton" href="LoginPage">Already have account?</a>
        @if (Model.errorMessage.Length > 0)
        {
            <div>
                <strong>@Model.errorMessage</strong>
            </div>
        }
        @if (Model.successMessage.Length > 0)
        {
            <div>
                <strong>@Model.successMessage</strong>
            </div>
        }
    </div>
</div>
